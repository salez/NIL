@model IEnumerable<JogoDoNilson.Models.Carta>

@{
    ViewBag.Title = "Home Page";
    var cont = 1;
}


@foreach (var item in Model)
{ 
    <div class="carta">
        <div class="conteudo_topo">
            <div class="carta_nome">@item.Nome</div>
            <div class="custo">
                <div class="custo_num">
                @item.Custo
                </div>
                
            </div>
        </div>
        <div class="conteudo_imagem" style="background-image: url(@Url.Content("~/images/cartas/" + (@item.Id).ToString().PadLeft(2,'0') + ".jpg"))"></div>
        <div class="conteudo_baixo">
            <div class="tipo">
                <div class="classe">
                    @item.Classe
                </div>
                <div class="raca">
                    <b>@item.Raça</b>
                </div>
            </div>
            <div class="descricao">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam a maximus lorem, id imperdiet orci. Integer congue lorem euismod erat interdum, eget porttitor lorem malesuada.
            </div>
            <div class="forca">
                <div class="ataque">@item.Ataque</div>
                <div class="defesa">@item.Defesa</div>
            </div>
        </div>
    </div>
}